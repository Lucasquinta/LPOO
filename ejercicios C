/*punto 1*/
#include <stdio.h>
main()
{
	int x1=1, x2=2, x3=3, xt;
	int salida = 0;
	
	do{
		
		xt=x1+x2+x3;
		
		if(xt==87){
			salida=1;
			break;
		}
		x1++;
		x2++;
		x3++;
		
	}while(1);
	printf("los numeros son %d, %d y %d.", x1, x2, x3);
	
}
/*punto 2*/
#include <stdio.h>
main()
{
	float n, acum, prom;
	int cont=0;
	do{
		printf("ingrese un numero: ");
		scanf("%f", & n);
		acum=acum+n;
		cont= cont +1;
	}while(cont<3);
	prom=acum/3;
	printf("el promedio de los 3 numeros es %f", prom);
}
/*punto 3*/
#include <stdio.h>
main()
{
	int N, par, seg;
	do{
	printf("Ingrese un numero: ");
	scanf("%d", & N);
	par=N%2;
	if(par==0){
		printf("El numro es par.\n");
	}
	else{
		printf("El numero es impar.\n");
	}
	printf("Desea ingresar otro numero? \n 1=si / 2=no: ");
	scanf("%d", & seg);
	}while(seg<2);
	printf("FIN");
}
/*punto 4*/
#include <stdio.h>
main()
{
	float prueba, tarea, final, acum=0, total;
	int i, n=4;
	for(i=0; i<n; i++){
		printf("Ingrese la nota de la prueba N %d: ", i+1);
		scanf("%f", & prueba);
		acum=acum+ prueba;
	}
	printf("Ingrese la nota de tarea: ");
	scanf("%f", & tarea);
	total= acum+tarea;
	final= total/5;
	if(final>=6){
		printf("La nota final es de %f, usted esta aprobado :)", final);
	}
	else{
		printf("La nota final es de %f, usted esta desaprobado :(", final);
	}
}
/*punto 5*/
#include <stdio.h>
main()
{
	int nota;
	printf("Ingrese su nota:");
	scanf("%d", & nota);
	if(nota>=6){
		printf("Aprobado ");
	}
	else{
		printf("Reprobado ");
	}
	if(nota>=8){
		printf("felicitaciones.");
	}	
	else if(nota==1){
		printf("debes esforzarte mas.");
	}
}
