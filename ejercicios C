/*punto 1*/
#include <stdio.h>
main()
{
	int x1=1, x2=2, x3=3, xt;
	int salida = 0;
	
	do{
		
		xt=x1+x2+x3;
		
		if(xt==87){
			salida=1;
			break;
		}
		x1++;
		x2++;
		x3++;
		
	}while(1);
	printf("los numeros son %d, %d y %d.", x1, x2, x3);
	
}
/*punto 2*/
#include <stdio.h>
main()
{
	float n, acum, prom;
	int cont=0;
	do{
		printf("ingrese un numero: ");
		scanf("%f", & n);
		acum=acum+n;
		cont= cont +1;
	}while(cont<3);
	prom=acum/3;
	printf("el promedio de los 3 numeros es %f", prom);
}
/*punto 3*/
